generator client {
  provider = "prisma-client-js"
  seed     = "ts-node ./seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  email    String   @unique
  password String
  salt     String
  refreshToken String? @unique
  // budgets  Budget[]
  accounts Account[]
}

